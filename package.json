{
    "name": "heroku-tin-fire",
    "version": "1.0.0",
    "description": "heroku test node.js app",
    "main": "server.js",
    "scripts": {
        "dev": "nodemon",
        "dev:src": "npm run clean:build  && node --inspect ./dist/server",
        "start": "npm i -g apidoc && npm run build && npm run apidoc && node ./dist/server",
        "build": "tsc",
        "clean": "rimraf ./dist",
        "clean:build": "npm run clean && npm run build",
        "tsc:init": "npm run build -- --init",
        "test": "nyc mocha",
        "nyc": "nyc",
        "coveralls": "cat ./coverage/lcov.info | ./node_modules/.bin/coveralls",
        "apidoc": "apidoc --config ./docs/apidoc --input docs/apidoc/ --output dist/public/docs"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/oze4/heroku-tin-fire.git"
    },
    "author": "matt oestreich",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/oze4/heroku-tin-fire/issues"
    },
    "homepage": "https://github.com/oze4/heroku-tin-fire#readme",
    "dependencies": {
        "@types/bcrypt": "^3.0.0",
        "@types/compression": "^1.7.0",
        "@types/cors": "^2.8.6",
        "@types/express": "^4.17.2",
        "@types/helmet": "0.0.45",
        "@types/jsonwebtoken": "^8.3.7",
        "@types/morgan": "^1.9.0",
        "@types/ms": "^0.7.31",
        "@types/redis": "^2.8.16",
        "bcrypt": "^3.0.8",
        "chalk": "^3.0.0",
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "helmet": "^3.21.3",
        "jsonwebtoken": "^8.5.1",
        "module-alias": "^2.2.2",
        "morgan": "^1.9.1",
        "ms": "^2.1.2",
        "pg": "^7.18.2",
        "redis": "^3.0.2",
        "reflect-metadata": "^0.1.13",
        "typeorm": "^0.2.24",
        "typescript": "^3.8.2",
        "winston": "^3.2.1"
    },
    "devDependencies": {
        "@types/chai": "^4.2.8",
        "@types/mocha": "^7.0.1",
        "@types/request": "^2.48.4",
        "@types/supertest": "^2.0.8",
        "@typescript-eslint/eslint-plugin": "^2.19.0",
        "@typescript-eslint/parser": "^2.19.0",
        "chai": "^4.2.0",
        "coveralls": "^3.0.9",
        "eslint": "^6.8.0",
        "eslint-config-airbnb-base": "^14.0.0",
        "eslint-config-prettier": "^6.10.0",
        "eslint-plugin-import": "^2.20.1",
        "eslint-plugin-prettier": "^3.1.2",
        "lint-staged": "^10.0.7",
        "mocha": "^7.0.1",
        "nodemon": "^2.0.2",
        "nyc": "^15.0.0",
        "prettier": "^1.19.1",
        "request": "^2.88.0",
        "rimraf": "^3.0.2",
        "source-map-support": "^0.5.16",
        "supertest": "^4.0.2",
        "ts-node": "^8.6.2",
        "tsconfig-paths": "^3.9.0"
    },
    "prettier": {
        "printWidth": 100,
        "singleQuote": true,
        "trailingComma": "all",
        "tabWidth": 4,
        "bracketSpacing": true
    },
    "mocha": {
        "require": [
            "ts-node/register",
            "source-map-support/register"
        ],
        "bail": true,
        "full-trace": true,
        "timeout": 2000,
        "spec": [
            "test/**/*.test.ts"
        ]
    },
    "nyc": {
        "include": [
            "src/**/*.ts"
        ],
        "exclude": [
            "src/utils/typeorm/validation.ts",
            "src/routes/api/v1/book/**/*.*",
            "src/docs/**/*.*"
        ],
        "extension": [
            ".ts"
        ],
        "require": [
            "ts-node/register"
        ],
        "reporter": [
            "text",
            "html",
            "lcov"
        ],
        "sourceMap": "true",
        "instrument": "true"
    },
    "nodemonConfig": {
        "watch": [
            "src"
        ],
        "ext": "ts",
        "ignore": [
            "src/**/*.spec.ts",
            "test/**/*.*"
        ],
        "exec": "npm run dev:src"
    },
    "_moduleDirectories": [
        "src",
        "dist"
    ],
    "lint-staged": {
        "*.ts": [
            "eslint --fix",
            "prettier --write",
            "git add"
        ]
    }
}
